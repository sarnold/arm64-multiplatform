From 8ff7f71fae1210b8c24226500636704d7f53159d Mon Sep 17 00:00:00 2001
From: Icenowy Zheng <icenowy@aosc.io>
Date: Mon, 16 Mar 2020 22:23:23 +0800
Subject: [PATCH 106/116] arm64: allwinner: dts: a64: enable modem power rail
 on PinePhone

Signed-off-by: Icenowy Zheng <icenowy@aosc.io>
---
 .../arm64/boot/dts/allwinner/sun50i-a64-pinephone.dtsi | 10 ++++++++++
 1 file changed, 10 insertions(+)

diff --git a/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone.dtsi b/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone.dtsi
index e6774fd20e..800ad0fd4b 100644
--- a/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone.dtsi
+++ b/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone.dtsi
@@ -95,6 +95,15 @@
 		regulator-max-microvolt = <3300000>;
 	};
 
+	reg_vbat_4g: regulator-vbat-4g{
+		compatible = "regulator-fixed";
+		regulator-name = "vbat-4g";
+		regulator-min-microvolt = <3700000>;
+		regulator-max-microvolt = <3700000>;
+		gpio = <&r_pio 0 7 GPIO_ACTIVE_HIGH>; /* PL7 */
+		enable-active-high;
+	};
+
 	speaker_amp: audio-amplifier {
 		compatible = "simple-audio-amplifier";
 		enable-gpios = <&pio 2 7 GPIO_ACTIVE_HIGH>; /* PC7 */
@@ -546,5 +555,6 @@
 };
 
 &usbphy {
+	usb1_vbus-supply = <&reg_vbat_4g>;
 	status = "okay";
 };
