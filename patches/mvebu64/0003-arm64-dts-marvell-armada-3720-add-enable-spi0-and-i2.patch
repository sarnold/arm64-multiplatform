From 5de563339448350e0411fc17c4afa08384216972 Mon Sep 17 00:00:00 2001
From: Steve Arnold <nerdboy@gentoo.org>
Date: Thu, 19 Jul 2018 20:48:50 -0700
Subject: [PATCH 03/13] arm64: dts: marvell: armada-3720: add/enable spi0 and
 i2c0

Signed-off-by: Steve Arnold <nerdboy@gentoo.org>
---
 .../boot/dts/marvell/armada-3720-espressobin.dts     | 20 ++++++++++++++++++++
 1 file changed, 20 insertions(+)

diff --git a/arch/arm64/boot/dts/marvell/armada-3720-espressobin.dts b/arch/arm64/boot/dts/marvell/armada-3720-espressobin.dts
index f92b93474bf1..d2f944825dfa 100644
--- a/arch/arm64/boot/dts/marvell/armada-3720-espressobin.dts
+++ b/arch/arm64/boot/dts/marvell/armada-3720-espressobin.dts
@@ -95,6 +95,26 @@
 	status = "okay";
 };
 
+&spi0 {
+	status = "okay";
+
+	w25q32dw@0 {
+		#address-cells = <1>;
+		#size-cells = <1>;
+		compatible = "jedec,spi-nor";
+		reg = <0>;
+		spi-max-frequency = <104000000>;
+		m25,fast-read;
+
+		pinctrl-names = "default";
+		pinctrl-0 = <&spi_quad_pins>;
+	};
+};
+
+&i2c0 {
+	status = "okay";
+};
+
 &mdio {
 	switch0: switch0@1 {
 		compatible = "marvell,mv88e6085";
